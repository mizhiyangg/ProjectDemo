<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.itcast.zhbj.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/tab_home_selector"
            android:textColor="@drawable/txt_tab_selector"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/rb_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/tab_circle_selector"
            android:textColor="@drawable/txt_tab_selector"
            android:text="新闻中心"/>
        <RadioButton
            android:id="@+id/rb_smart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/tab_fri_selector"
            android:textColor="@drawable/txt_tab_selector"
            android:text="智慧服务"/>
        <RadioButton
            android:id="@+id/rb_gov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@drawable/txt_tab_selector"
            android:drawableTop="@drawable/tab_circle_selector"
            android:text="政务"/>
        <RadioButton
            android:id="@+id/rb_seeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@drawable/txt_tab_selector"
            android:drawableTop="@drawable/tab_mine_selector"
            android:text="设置"/>

    </RadioGroup>
</LinearLayout>